{
  "name": "yt-extension-2",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && npm run build-content && npm run build-main && npm run copy-files && npm run clean-dist-tmp",
    "build-content": "vite build --config vite.content.config.ts",
    "build-main": "vite build --config vite.config.ts",
    "copy-files": "copy src\\manifest.json dist\\ && xcopy dist-tmp dist /E /I /Y",
    "clean-dist-tmp": "rimraf dist-tmp",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.7",
    "color-thief-ts": "^1.1.1",
    "postcss-import": "^16.1.0",
    "postcss-nested": "^6.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.26.0",
    "simplebar-react": "^3.2.6",
    "vite-plugin-web-extension": "^4.1.6"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.25",
    "@eslint/js": "^9.8.0",
    "@types/chrome": "^0.0.270",
    "@types/node": "^22.3.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/serviceworker": "^0.0.92",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.8.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "postcss": "^8.4.41",
    "redux-thunk": "^3.1.0",
    "register-service-worker": "^1.7.2",
    "rimraf": "^6.0.1",
    "sass-embedded": "^1.77.8",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.0",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^5.0.1",
    "webext-redux": "^3.0.0"
  }
